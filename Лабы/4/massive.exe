#include <iostream>
#include <algorithm>
#include <numeric>
 
template <typename T>
struct PosSum {
    T operator () (const T & a, const T & b){
        return ( b > 0 ) ? a + b : a;
    }
};
 
int main(){
    const int SIZE = 5;
    int arr[SIZE] = { 1, -1, 2, -2, 0 };
 
    std::cout << "array: ";
    for ( int i = 0; i < SIZE; ++i )
        std::cout << arr[i] << ' ';
    std::cout << std::endl;
    std::cout << "Sum of positive elements: "
            << std::accumulate(arr, arr + SIZE, 0, PosSum<int>()) << std::endl;
 
    return 0;
}